#!/usr/bin/env sh

# Do not modify this file - this file is created by bin/wrapper/dist-sync and will be overriden every time dist-sync is invoked.
# see https://gitlab.brainbits.net/docker/dist/-/blob/master/README.md

. "$(dirname $0)/../config"

printf "${check}>>> running ${check_name}transitive-dependencies${check} check on ${check_name}%s${reset}\n" "${NAME}"

cmd=$*
if [ $# -eq 0 ]; then
    cmd=""

    configFile=${COMPOSER_REQUIRE_CHECKER_CONFIG_FILE:="composer-require-checker.json"}

    if [ -f "${configFile}" ]; then
        cmd="--config-file=${configFile}"
    fi
fi

"$(wrapper composer-require-checker ${COMPOSER_REQUIRE_CHECKER_CMD:-composer-require-checker})" ${cmd}
